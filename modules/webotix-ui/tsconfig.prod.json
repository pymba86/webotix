{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules"
  ]
}
